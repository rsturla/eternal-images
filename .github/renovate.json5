{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  packageRules: [
    {
      matchCategories: [
        'docker',
      ],
      enabled: false,
    },
    {
      automerge: true,
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
        'pinDigest',
      ],
      matchManagers: [
        'github-actions',
      ],
    },
  ],
}
